@page
@using Locker.Pages
@model BoxListModel



<div class="container-xxl flex-grow-1 container-p-y">
  <div class="alert alert-success courierAlert alert-dismissible" role="alert" style="display:none">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <div class="card">
    <h5 class="card-header">Kutular</h5>


    <div class="table-responsive text-nowrap">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#Id</th>
            <th>#Boyut</th>
            <th>#Icon Link</th>
            <th>#İşlemler</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0"> 
            @foreach(var box in Model.Boxes){ 
             


                <tr>
                                <td>@box.Id</td>
                                <td>@box.Size</td>
                                  <td>@box.IconLink</td>
            <td><a href="EditBox?Id=@box.Id"><button class="btn btn-success">Düzenle</button></a></td>
            <td><a href="BoxAmountList?BoxId=@box.Id"><button class="btn btn-primary">Ücretler</button></a></td>
                                  
       
            </tr>
    
            }
           
          
           
          </tbody>
      </table>
        <div class="col">
      </div>
   
    </div>
  </div>
</div>