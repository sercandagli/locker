@page 
@using Locker.Pages
@model EditBoxAmountModel

@Html.AntiForgeryToken()


<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="alert alert-success courierAlert alert-dismissible" role="alert" style="display:none">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="card">
            <h5 class="card-header">Kutu Düzenle</h5>


            @using (Html.BeginForm())
            {
                <div class="row">
                    <div class="row gy-5">
                        <div class="col-lg-6 order-lg-2 position-relative" id="sender-div" data-aos="zoom-out">
                            <input type="hidden" name="id" value="@Model.BoxAmount.Id"/>
                            <div class="mb-3">
                                <label class="form-label" for="basic-default-email">Ücret</label>
                                <label id="userType" class="warning-label"></label>
                                <input class="form-control" name="amount" value="@Model.BoxAmount.Amount"></input>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="basic-default-email">Promosyonlu Ücret</label>
                                <label id="userType" class="warning-label"></label>
                                <input class="form-control" name="promotionAmount" value="@Model.BoxAmount.PromotionAmount"></input>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="basic-default-email">Promosyon Açıklaması</label>
                                <label id="userType" class="warning-label"></label>
                                <input class="form-control" name="promotionDescription" value="@Model.BoxAmount.PromotionDescription"></input>
                            </div>


                            <button class="form-control" type="submit">Kaydet</button>

                        </div>

                    </div>
                </div>
            }

        </div>
    </div>
</div>