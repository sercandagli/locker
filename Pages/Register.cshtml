@page 
@using Locker.Pages
@model RegisterModel
@{ Layout = "_MainLayout"; }

<main class="main">
    <section id="about-3" class="about-3 section">
        <div class="container">
            <div class="row gy-4 justify-content-between align-items-center">
                @using (Html.BeginForm(FormMethod.Post))
                {
                    <div class="row">
                        <div class="row gy-5">
                            <div class="col-lg-6 order-lg-2 position-relative" id="sender-div" data-aos="zoom-out">
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-fullname">Ad Soyad</label>
                                    <label id="senderNameWarning" class="warning-label"></label>
                                    <input type="text" class="form-control" name="name" id="basic-default-fullname" required/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-fullname">Telefon</label>
                                    <label id="senderNameWarning" class="warning-label"></label>
                                    <input type="text" class="form-control" name="phone" id="basic-default-fullname" required/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-fullname">Email</label>
                                    <label id="senderNameWarning" class="warning-label"></label>
                                    <input type="text" class="form-control" name="email" id="basic-default-fullname" required/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-fullname">Åžifre</label>
                                    <label id="senderPhoneWarning" class="warning-label"></label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" name="password" id="basic-default-fullname" required/>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-form-submit btn-success">Kaydol</button>
                                </div>

                            </div>

                        </div>
                    </div>
                   
                }
            </div>
        </div>
    </section>
</main>
